<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="GeneralImage" default="jar" basedir=".">
	<taskdef resource="net/sf/antcontrib/antlib.xml">
		<classpath>
			<pathelement location="/usr/share/java/ant/ant-contrib.jar" />
		</classpath>
	</taskdef>

	<property environment="env"/>
	<property file="../../../../build.properties"/>

	<property name="src.dir" location="." />
	<property name="bin.dir" location="bin" />
	<property name="lib.dir" location="../../../../lib" />
	<property name="ext.dir" location="${lib.dir}/external" />
	<property name="javadoc.dir" location="docs" />
	<property name="jar.name" value="GeneralImage.jar" />
	<property name="jar.path" location="../../../../plugins/${jar.name}" />

	<property name="test.src.dir" location="../../test/src/GeneralImage" />
	<property name="test.bin.dir" location="bin" />
	<property name="test.class.name" value="org.iugonet.www.GeneralImage" />

	<path id="classpath">
		<pathelement location="${src.dir}" />
		<pathelement location="${lib.dir}/Aplot.jar" />
		<pathelement location="${lib.dir}/Iplot.jar" />
		<pathelement location="${ext.dir}/${jai_core.jar}" />
		<pathelement location="${ext.dir}/${jai_codec.jar}" />
	</path>

	<path id="test.classpath">
		<pathelement location="${test.bin}" />
		<pathelement location="${ext.dir}/${junit.jar}" />
		<pathelement location="${lib.dir}/Aplot.jar" />
		<pathelement location="${lib.dir}/Iplot.jar" />
		<pathelement location="${ext.dir}/${jai_core.jar}" />
		<pathelement location="${ext.dir}/${jai_codec.jar}" />
	</path>

	<!-- -->

	<target name="jar" depends="clean,compile">
		<jar jarfile="${jar.path}">
			<fileset dir="${src.dir}" includes="**/*.java" />
			<fileset dir="${bin.dir}" includes="**/*.class" />
			<manifest>
				<target name="clean">
					<antcall target="clean_jar" />
					<antcall target="clean_bin" />
				</target>

				<target name="clean_jar" if="have.jar">
					<delete>
						<fileset file="${jar.path}" />
					</delete>
				</target>

				<target name="clean_bin" if="have.bin">
					<delete>
						<fileset dir="${bin.dir}" includes="**" />
					</delete>
				</target>
				<attribute name="Plugin-Class" value="GeneralImage" />
			</manifest>
		</jar>
	</target>

	<target name="compile">
		<subant target="compile">
			<fileset file="../../../Tplot/build.xml" />
		</subant>
		<subant target="jar">
			<fileset file="../../../Tplot/build.xml" erroronmissingdir="false" />
		</subant>
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" destdir="${bin.dir}" includeantruntime="false" classpathref="classpath" />
	</target>

	<target name="clean">
		<if>
			<available file="${jar.path}" type="file" />
			<then>
				<delete file="${jar.path}" />
			</then>
		</if>
		<if>
			<available file="${bin.dir}" type="dir" />
			<then>
				<delete dir="${bin.dir}" />
			</then>
		</if>
		<if>
			<available file="${javadoc.dir}" type="dir" />
			<then>
				<delete dir="${javadoc.dir}" />
			</then>
		</if>
	</target>

	<target name="javadoc">
		<javadoc destdir="${javadoc.dir}">
			<fileset dir="${src.dir}" />
		</javadoc>
	</target>

	<target name="test" depends="compile" description="test the source">
		<junit fork="yes">
			<formatter type="plain" usefile="false" />
			<classpath refid="test.classpath" />
		</junit>
	</target>

</project>
